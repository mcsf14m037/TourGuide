@{
    ViewBag.Title = "editTour";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

@using MvcApplication1.Models;

<html lang="en">
<head>
    <style>
    </style>
    <title>Sign_Up</title>
    <style>
        #signUp {
            border-radius: 15px 50px;
            border: 2px solid #FF3300;
            background: url(/Content/Vintage-Tra2334vel.jpg);
            width: 250px;
            height: 450px;
        }
    </style>
</head>
<body>
    <center>
        <div id="signUp" class="container">
            <center>
                <h1>Update Tour</h1>
                @foreach(Tour t in Model)
                { 
                <form method="post" action="editTour">
                    <label>Name</label><input type="text" class="register-input" id="Name" name="Name" value="@t.Name"><br><br>
                    <label>Duration</label><input type="text" class="register-input" id="Duration" name="Duration"@t.Duration><br><br>
                    <input type="hidden" id="id" name="id"><br><br>
                    <label>Price</label><input type="text" id="Price" name="Price" value="@t.Price"><br><br>
                    <label>Facility No 1</label><input type="text" id="Facility_No_1" name="Facility_No_1" value="@t.Facility_No_1"><br><br>
                    <label>Facility No 2</label><input type="text" id="Facility_No_2" name="Facility_No_2" value="@t.Facility_No_2"><br><br>
                    <label>Facility No 3</label><input type="text" id="Facility_No_4" name="Facility_No_3" value="@t.Facilty_No_3"><br><br>
                    <label>Person Allowed</label><input type="number" id="Person" name="Person" value="@t.Person"><br><br>
                    <label>Destination</label><input type="text" id="Destination" name="Destination" value="@t.Destination"><br><br>
                    <label>Date and Time </label><input type="datetime" id="Date_and_Time" name="Date_and_Time" value="@t.Date_and_Time"><br><br>
                    <input class="btn-primary btn-lg" type="submit" value="Update Tour">
                </form>
                }
            </center>
        </div>
    </center>
</body>
</html>
