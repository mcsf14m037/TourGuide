@{
    ViewBag.Title = "Queries";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

@using MvcApplication1.Models;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Queries</title>

    <!--link rel="stylesheet" type="text/css" href="/Content/style2.css" /-->

    <style>
        #wrap {
            border-radius: 15px 50px;
            border: 2px solid #FF3300;
            background: url(/Content/depositphotos_20717265-Vintage-Travel.jpg);
            width: 500px;
            height: 300px;
        }
    </style>
</head>

<body>
    <center>
        <div id="wrap">
            <h2>Ask a Question!</h2>
            <center>
                <form id="query-form" action="InsertQuery">

                    <p id="formstatus"></p>
                    <p>Hello !</p><br><br>
                    <label for="Question">Your Question : </label>
                    <textarea name="Question" id="Question"></textarea><br><br>
                    <label for="User_Name">Name: </label>
                    <input type="text" name="User_Id" value="" id="User_Id" />
                    <input type="text" name="User_Name" value="" id="User_Name" /><br><br>
                    <input class="btn-primary btn-lg" type="submit" name="submit" value="OK I want to send it now, thanks!" />
                </form>
            </center>
        </div>
    </center>
</body>
</html>

