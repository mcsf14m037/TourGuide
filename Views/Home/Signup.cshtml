@{
    ViewBag.Title = "Sign-Up";
}

<!DOCTYPE html>

<html lang="en">
<head>
    <style>
        </style>
   <title>Sign_Up</title>
    <style>
        #signUp {
            border-radius: 15px 50px;
            border: 2px solid #FF3300;
            background: url(/Content/Vintage-Tra2334vel.jpg);
            width: 250px;
            height: 420px;
        }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script>
       
        $(document).ready(function () {
            $("#submit").hide();
            $("#Avail").click(function () {
                var uname = $("#UserName").val();
                $.getJSON("/Home/CheckAvailability",{"username":uname}, function (result) {
                    if (result) {
                        $("#UserName").val("Not Available");
                    }
                    else {
                        $("#UserName").val("Available");
                        $("#submit").show();
                    }

                });
            });
        });
        </script>
</head>
<body>
    <center><div id="signUp" class="container">
        <center><h1>Welcome</h1>
            <form method="post" action="#" enctype="multipart/form-data">
                <label>Name</label><input type="text" class="register-input" id="name" name="name"><br><br>
                <label>User Name</label><input type="text" class="register-input" id="UserName" name="UserName">
            <button id="Avail">Check Availabilty</button>
                <label>Date of Birth</label><input type="date" class="register-input" id="DOB" name="DOB"><br><br>
                <div class="register-switch">
                    <input type="radio" name="Gender" value="Female" id="sex_f" checked>
                    <label for="sex_f" class="register-switch-label">Female</label>
                    <input type="radio" name="Gender" value="Male" id="male">
                    <label>Male</label>
                </div>
                <br><br>
                <input type="hidden" id="Role" name="Role" value="User">
                <label>City</label><input type="text" id="City" name="City"><br><br>
                <label>Email</label><input type="text" id="Email" name="Email"><br><br>
                <label>Password</label><input type="password" id="Password" name="Password"><br><br>
                <label>Image</label><input type="file" id="image" name="image"><br><br>
                <input id="submit" class="btn-primary btn-lg" type="submit" value="Create Account">
            </form></center>
    </div>
    </center>
</body>
</html>


